{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "target": "ES6",
    "lib": ["es2022", "dom"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "rootDir": "src",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "inlineSourceMap": true
  },

  "include": [ "./src/**/*" ],
  "exclude": [ "./dist/**/*" ]
}
